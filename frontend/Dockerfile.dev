FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Clean install with explicit ajv version to fix dependency issues
RUN npm install --legacy-peer-deps && \
    npm install ajv@^8.12.0 --legacy-peer-deps && \
    npm cache clean --force

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "start"]
