# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sme_analytics_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=sme_analytics_dev
DATABASE_USER=dev_user
DATABASE_PASSWORD=dev_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Keys and External Services
HUGGINGFACE_API_KEY=your_huggingface_token_here
OPENAI_API_KEY=your_openai_key_here

# Business System Integrations
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret
QUICKBOOKS_REDIRECT_URI=http://localhost:8080/auth/quickbooks/callback

SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret

SQUARE_APPLICATION_ID=your_square_app_id
SQUARE_ACCESS_TOKEN=your_square_access_token
SQUARE_WEBHOOK_SIGNATURE_KEY=your_webhook_key

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=development
SERVER_PORT=8080
MANAGEMENT_SERVER_PORT=8081

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here_at_least_32_characters
JWT_EXPIRATION=86400000
ENCRYPTION_KEY=your_encryption_key_32_chars_long

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:8080/api
REACT_APP_WS_BASE_URL=ws://localhost:8080/ws
REACT_APP_ENV=development
REACT_APP_VERSION=1.0.0

# ML Model Configuration
OLLAMA_BASE_URL=http://localhost:11434
MODEL_CACHE_DIR=/tmp/model_cache
MAX_MODEL_CACHE_SIZE=10GB
HUGGINGFACE_CACHE_DIR=/tmp/hf_cache

# Model-specific settings
DEFAULT_FORECASTING_MODEL=patchtst
DEFAULT_REASONING_MODEL=llama3.1:8b
MODEL_INFERENCE_TIMEOUT=30
BATCH_PREDICTION_SIZE=100

# Cloud Configuration (if using cloud deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=sme-analytics-models
AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/account/queue

AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection
AZURE_STORAGE_CONTAINER=models

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENABLED=true
METRICS_EXPORT_INTERVAL=60

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@sme-analytics.com

# Feature Flags
ENABLE_REASONING_MODELS=true
ENABLE_EXPLAINABILITY=true
ENABLE_REALTIME_PREDICTIONS=true
ENABLE_BATCH_PROCESSING=true
ENABLE_MODEL_VERSIONING=true

# Performance Tuning
MAX_CONCURRENT_PREDICTIONS=10
DATABASE_POOL_SIZE=20
REDIS_POOL_SIZE=10
HTTP_CLIENT_TIMEOUT=30000

# Development and Testing
DEBUG_MODE=true
MOCK_EXTERNAL_APIS=false
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=sme-analytics-backups